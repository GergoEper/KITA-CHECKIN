<h2>This is your Admin Profile {{user.username}}</h2>

{{#each childrenList}}
    <div><a href="/child/{{_id}}">{{alias}}</a> </div>

    <form action="/child/{{_id}}/status" method="POST">
        <label for="status">Switch on and of status</label>
        <input type="text" name="status" id="status" value="{{status}}">
        <button type="submit">Change status</button> 
    </form>
{{/each}}





